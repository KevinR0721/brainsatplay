{
    "source": {
        "includePattern": ".+\\.(js(doc|x)?|mjs)$",   // Only process file ending in .js, .jsdoc or .jsx
        "include": ["./src/library","./README.md"],        // Check all folders.
        "exclude": [
            "node_modules",
            "./src/js/bciutils/timechart",
            "./src/js/other/old",
            "./src/library/src/bciutils/devicePlugins/ganglion/ganglion-ble-master",
            "./src/library/src/bciutils/devicePlugins/cyton"                
        ]             
    },
    "recurseDepth": 10,                         // Only go 10 levels deep.
    "opts": {
        "destination": "./docs/",               // Where I want my docs to be generated.
        "recurse": true                         // Same as using -r or --recurse
    },
    "templates": {
        "default": {
            "layoutFile": "./templates/brainstorm/tmpl/layout.tmpl",
            "staticFiles": {
                "paths": ["./screenshots/","./public/","./templates/brainstorm/static/"]
            }
        }
    }
}